<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Live Character Counter for Textarea</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    .container {
      border: 1px solid #000;
      padding: 15px;
      margin-bottom: 20px;
    }
    h3 {
      margin-top: 0;
    }
    textarea {
      width: 100%;
      height: 100px;
      font-size: 14px;
      padding: 8px;
    }
    .counter {
      margin-top: 8px;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <div class="container">
    <h3>Live Character Counter</h3>
    <textarea id="text1" placeholder="Start typing..."></textarea>
    <p class="counter">Characters: <span id="count1">0</span></p>
  </div>

  <div class="container">
    <h3>Live Character Counter</h3>
    <textarea id="text2">Hello from ByteXL</textarea>
    <p class="counter">Characters: <span id="count2">17</span></p>
  </div>

  <script>
    function setupCounter(textareaId, counterId) {
      const textarea = document.getElementById(textareaId);
      const counter = document.getElementById(counterId);

      // Update counter on input
      textarea.addEventListener("input", () => {
        counter.textContent = textarea.value.length;
      });
    }

    setupCounter("text1", "count1");
    setupCounter("text2", "count2");
  </script>

</body>
</html>
